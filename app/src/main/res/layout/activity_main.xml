<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity"
    android:background="@color/colorAccent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivGetStarted"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_image_get_started"
        android:layout_marginTop="@dimen/margin_image_get_started"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_get_started" />

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivGetStarted"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="@dimen/margin_top_text_view"
        android:text="@string/lbl_Welcome"
        android:textColor="@color/white"
        android:textSize="@dimen/text_heading_1x"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvWelcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="@string/lbl_welcome_to_app"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/ivGetStartedBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:layout_marginEnd="@dimen/margin_medium_2"
        android:layout_marginBottom="@dimen/margin_large"
        android:background="@drawable/background_get_started_btn"
        android:gravity="center"
        android:paddingTop="@dimen/margin_medium_2"
        android:paddingBottom="@dimen/margin_medium_2"
        android:text="Get Started"
        android:textColor="@color/white"
        android:textSize="@dimen/text_regular_2x"
        android:textStyle="bold" />



</RelativeLayout>